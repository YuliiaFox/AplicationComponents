<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/linkFragment">

    <fragment
        android:id="@+id/linkFragment"
        android:name="com.example.calculator.linkpage.LinkFragment"
        tools:layout="@layout/link_fragment">
        <action
            android:id="@+id/open_calculator"
            app:destination="@id/calculatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.calculator.history.HistoryFragment"
        tools:layout="@layout/history_fragment" />
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.calculator.calculator.CalculatorFragment"
        tools:layout="@layout/calculator_fragment">
        <action
            android:id="@+id/open_history"
            app:destination="@id/historyFragment" />
    </fragment>
</navigation>